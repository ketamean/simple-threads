<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Activity</title>

    <link rel="stylesheet" href="/css/activity.css" />
    <link rel="stylesheet" href="css/normalize.css" />
    <link rel="stylesheet" type="text/css" href="/css/universal.css">

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
      integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />

    <script src="https://cdn.tailwindcss.com"></script>
     <script>
        tailwind.config = {
            theme: {
                    extend: {
                        colors: {
                            "jet-black": '#0a0a0a',
                            'semi-black': 'rgba(0, 0, 0, 0.5)',
                            'chinese-black': '#101010',
                            "neon-white": {
                                "DEFAULT": '#f3f5f7',
                                "15": "rgba(243, 245, 247, 0.15)",
                                "35": "rgba(243, 245, 247, 0.35)",
                            },
                            "eerie-black": '#181818',
                            "see-more": "rgb(173, 163, 150)",
                            "next": "rgb(119, 119, 119)",
                            "pop-up": "#787878",
                            "lucky": "#777777",
                            "333": "#333333",
                            "24": "rgb(24,24,24)"
                        },
                        lineHeight:{
                            "12": '48px',
                            "16": '4rem',
                            'settingBtn': 'calc(1.4 * 1em)',
                        },
                        spacing:{
                            "settingBox": "340.656px",
                            "0.5": "0.125rem",
                            "post": "32rem",
                            "followBoard": "calc(100% - 120px)",
                            "tab": "calc(100% - 48px)"
                        },
                        gridTemplateColumns:{
                            "post": "12% 88%;"
                        },
                        backgroundImage:{
                            userPlaceholder: "url('/img/user-placeholder.jpg')",
                        }
                    }
                },
            }
    </script>

  </head>

  <body>
    <div class="activity-container"> 
      <!-- delete confirmation overlay -->
      <div class="delete-confirmation-overlay hidden">
        <div class="delete-confirmation-container">
          <div class="delete-confirmation-box">
            <div class="delete-confirmation-content">
              <span>Are you sure you want to delete this notification?</span>
              <div class="delete-confirmation-buttons">
                <button type="button" class="confirm-delete-button">Yes</button>
                <button type="button" class="cancel-delete-button">No</button>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- delete confirmation overlay -->
      <header class="pt-4 pb-2 z-40 w-full h-14 bg-black/50 text-center fixed left-0 top-0 flex justify-center sm:w-14 sm:pl-2 sm:pt-4">
            <i class="fa-solid fa-bell notification-svg sm:top-[50px]"></i>
            <a href="/" title="Threads" class="h-full transition-transform ease-in scale-110" id="logo">
