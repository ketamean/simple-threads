	<main
		data-id={{user.id}}
		class="profile-follow-board absolute bg-eerie-black h-0 w-full bottom-0 z-50 rounded-tl-2xl rounded-tr-2xl left-1/2 -translate-x-1/2 overflow-y-hidden transition-all duration-500 ease-in-out bg-jet-black">
		<div class="tabs grid grid-cols-2">
			<div
				class="follow-board-item followers flex flex-col items-start justify-around h-10 text-center leading-5 active"
			>
				<div
					class="text-follower text-base font-bold text-lucky w-full h-1/2"
				>Follower</div>
				<div
					class="num-follower text-xs text-lucky w-full h-1/2"
				>{{{followers.length}}}</div>
			</div>
			<div
				class="follow-board-item flex flex-col items-start justify-around h-10 text-center leading-5 following"
			>
				<div
					class="text-following text-base font-bold text-lucky w-full h-1/2"
				>Following</div>
				<div
					class="num-following text-xs text-lucky w-full h-1/2"
				>{{followings.length}}</div>
			</div>
		</div>
		<div class="tab tab-follower w-full h-tab overflow-y-scroll block">
			{{#each followers}}
				<div
					class="user w-full h-20 flex items-center justify-evenly px-3 border-b border-solid border-neon-white-15"
				>
					<img
						class="user-avatar w-16 h-16 rounded-full"
						alt=""
						src="{{{profile_picture}}}"
					/>
					<div
						style="
							display: flex;
							align-items: center;
							justify-content: space-between;
							width: 80%;
							height: 80%;
							padding-left: 0.5rem;
						"
					>
						<div
							class="user-names flex flex-col justify-evenly h-5/6"
						>
							<div
								class="user-alias text-white text-base font-semibold"
							>{{{alias}}}</div>
							<div
								class="user-username text-white text-base opacity-35"
							>{{{username}}}</div>
						</div>
						<button
							type="button"
							class="follow-status px-4 w-28 h-8 border border-solid border-neon-white-15 rounded-xl cursor-pointer text-next text-base font-semibold bg-transparent"
							data-id="{{id}}"
							data-user = "{{user.id}}"
						>
							Remove?
						</button>
					</div>
				</div>
			{{/each}}
		</div>
		<div class="tab tab-following w-full h-tab overflow-y-scroll hidden">
			{{#each following}}
				<div
					class="user w-full h-20 flex items-center justify-evenly px-3 border-b border-solid border-neon-white-15"
				>
					<img
						class="user-avatar w-16 h-16 rounded-full"
						alt=""
						src="{{{avatar}}}"
					/>
					<div
						style="
							display: flex;
							align-items: center;
							justify-content: space-between;
							width: 80%;
							height: 80%;
							padding-left: 0.5rem;
						"
					>
						<div
							class="user-names flex flex-col justify-evenly h-5/6"
						>
							<div
								class="user-alias text-white text-base font-semibold"
							>{{{alias}}}</div>
							<div
								class="user-username text-white text-base opacity-35"
							>{{{username}}}</div>
						</div>
						<button
							type="button"
							class="follow-status px-4 w-28 h-8 border border-solid border-neon-white-15 rounded-xl cursor-pointer text-next text-base font-semibold bg-transparent"
							data-id="{{id}}"
							data-user = "{{user.id}}"
						>
							Following
						</button>
					</div>
				</div>
			{{/each}}
		</div>
	</main>
