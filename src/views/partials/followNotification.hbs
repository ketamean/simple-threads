<!--Follow-->
<div class="block relative h-auto mt-[12px] mb-[12px] overflow-x-hidden">
  <div class="activity-follow-container {{#unless is_read}}unread{{/unless}}" id="noti-{{id}}">
    <div class="p-[12px] col-start-1">
      <div class="relative block">
        <a
          href="/auth/proifle/{{interactor_id}}"
          class="h-[36px] m-0 p-0 no-underline list-none border-none rounded-full flex"
          role="link"
          tabindex="0"
        >
          <div class="h-[36px] m-0 p-0 no-underline list-none border-none rounded-full flex">
            <img class="rounded-full border-0 object-cover" src="{{img_interactor}}" alt="img-avt" />
          </div>
        </a>
        <div class="absolute top-[20px] right-[-6px]">
          <div class="activity-follow-img-svg avt-color">
            <svg
              aria-label=""
              role="img"
              viewBox="0 0 18 18"
              class="h-[18px] w-[18px] fill-white flex-shrink-0"
