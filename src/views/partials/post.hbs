<div class="w-full p-4 border-b border-gray-200 border-opacity-25">
  {{! Post header }}
  <div class="flex justify-between">
    <div class="flex items-center space-x-3">
      <a href="/auth/profile/{{userId}}" class="w-10 h-10">
        <img src="{{profile_picture}}" alt="" class="w-10 h-10 rounded-full" />
      </a>
      <div>
        <div class="flex items-baseline space-x-2">
          <a href="/auth/profile/{{userId}}">
            <h4 class="font-semibold">{{username}}</h4>
          </a>
          <span class="text-gray-500 text-sm">{{dateDistance}}</span>
        </div>
      </div>
    </div>
    <button class="text-gray-500 hover:text-gray-700">
      <i class="iconoir-more-horiz"></i>
    </button>
  </div>
  {{! Post content }}
  <div class="mt-3 mb-4">
    <p class="text-neon-white">{{content}}</p>
  </div>
  {{! Post Images }}
  {{#if postImagePaths.length}}
    <div class="mb-4 w-auto flex flex-nowrap h-60 overflow-x-auto gap-4">

      {{#each postImagePaths}}
        <img
          src="{{this}}"
          alt="Post image"
          class="h-full w-auto object-cover rounded"
        />
      {{/each}}
    </div>
  {{/if}}
  {{! Post actions }}
  <div class="flex items-center text-sm text-gray-500 mb-3">
    <span>{{comments_count}} replies</span>
    <span class="mx-1">Â·</span>
    <span>{{likes_count}} likes</span>
  </div>

  {{! Action buttons }}
  <div class="flex items-center space-x-4 pt-1">
    <button class="text-gray-500 text-2xl hover:text-white heartReact">
      <div class="{{#if liked}}iconoir-heart-solid{{else}}iconoir-heart{{/if}} heartReact" data-threadid="{{id}}"></div>
    </button>
    <button class="text-gray-500 text-2xl hover:text-white">
      <a href="/auth/comments?id={{id}}">
        <div class="iconoir-chat-bubble-empty"></div>
      </a>
    </button>
  </div>
</div>