<div class="post-container">
    <div class="post-grid">
        <!-- 1 -->
        <div class="post-header-img-block">
            <a href="/users/{{username}}" role="link" tabindex="0">
                <div class="mini-avatar-container">
                    <img src="{{avatarImagePath}}" alt="img-avt">
                </div>
            </a>
        </div>
        <!-- 2 -->
        <div class="post-header-info-block">
            <div>
                <span>{{username}}</span>
            </div>
            <div>
                <span>{{date}}</span>
            </div>
        </div>
        <!-- 3 -->
        <div class="post-body-container">
            <div class="post-content-container">
                <span class="post-content-text">{{content}}</span>
            </div>
            <div class="post-img-block">
                <div class="post-img-container">
                    <div class="post-img-cover">
                        <div class="post-img-scroll">
                            <div class="post-img-left"></div>
                            {{#if postImagePaths}}
                                {{#each postImagePaths}}
                                <div class="post-img-border">
                                    <div class="post-img-content">
                                        <div class="post-img-picture-container">
                                            <picture class="post-img-picture">
                                                <img alt="content-img" src="{{this}}">
                                            </picture>
                                        </div>
                                    </div>
                                </div>
                                {{/each}}
                            {{/if}}
                            <div class="post-img-left"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="post-react-container post-react-container-flex">
                <div class="post-react like">
                    <svg aria-label="Liked" role="img" viewBox="0 0 18 18" class="react-svg react-like-on">
                        <title>Like</title>
                        <path d="M1.34375 7.53125L1.34375 7.54043C1.34374 8.04211 1.34372 8.76295 1.6611 9.65585C1.9795 10.5516 2.60026 11.5779 3.77681 12.7544C5.59273 14.5704 7.58105 16.0215 8.33387 16.5497C8.73525 16.8313 9.26573 16.8313 9.66705 16.5496C10.4197 16.0213 12.4074 14.5703 14.2232 12.7544C15.3997 11.5779 16.0205 10.5516 16.3389 9.65585C16.6563 8.76296 16.6563 8.04211 16.6562 7.54043V7.53125C16.6562 5.23466 15.0849 3.25 12.6562 3.25C11.5214 3.25 10.6433 3.78244 9.99228 4.45476C9.59009 4.87012 9.26356 5.3491 9 5.81533C8.73645 5.3491 8.40991 4.87012 8.00772 4.45476C7.35672 3.78244 6.47861 3.25 5.34375 3.25C2.9151 3.25 1.34375 5.23466 1.34375 7.53125Z" stroke-width="1.25"></path>
                    </svg>
                    <span class="{{#if liked}}react-like-on{{/if}}">{{nLikes}}</span>
                </div>

                <div class="post-react cmt">
                    <svg aria-label="cmt" role="img" viewBox="0 0 18 18" class="react-svg">
                        <title>Comment</title>
                        <path d="M15.376 13.2177L16.2861 16.7955L12.7106 15.8848C12.6781 15.8848 12.6131 15.8848 12.5806 15.8848C11.3779 16.5678 9.94767 16.8931 8.41995 16.7955C4.94194 16.5353 2.08152 13.7381 1.72397 10.2578C1.2689 5.63919 5.13697 1.76863 9.75264 2.22399C13.2307 2.58177 16.0261 5.41151 16.2861 8.92429C16.4161 10.453 16.0586 11.8841 15.376 13.0876C15.376 13.1526 15.376 13.1852 15.376 13.2177Z" stroke-linejoin="round" stroke-width="1.25"></path>
                    </svg>
                    <span>{{nComments}}</span>
                </div>
            </div>
        </div>
    </div>
</div>